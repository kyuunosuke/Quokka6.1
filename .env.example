# Update these with your Supabase details from your project settings > API
# https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Supabase Service Role Key (for admin operations)
# Keep this secret and never expose it to the client
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Database URL (optional, for direct database connections)
DATABASE_URL=your-database-url

# JWT Secret (for custom JWT operations)
SUPABASE_JWT_SECRET=your-jwt-secret

# Admin Configuration
# Pre-configured admin credentials for secure access
ADMIN_EMAIL=your-admin-email@example.com
ADMIN_PASSWORD=your-secure-password-here
ADMIN_NAME=System Administrator

# Security
NEXTAUTH_SECRET=your_nextauth_secret_key
NEXTAUTH_URL=http://quokkamole.com/admin/login

# Optional: Additional admin emails (comma-separated)
ADMIN_EMAILS=paused.rewinded@gmail.com

# Environment
NODE_ENV=development

# Admin Setup Key (for one-time setup API)
ADMIN_SETUP_KEY=setup-admin-2024-secure
